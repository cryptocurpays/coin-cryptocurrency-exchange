<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>Coins and Cryptocurrency Exchange</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">

	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-bitcoin"></span> Profile Page</h1>
		<a href="/logout" class="btn btn-default btn-sm">Logout</a>
	</div>

	<div class="row">
		<div class="col-sm-6">
			<div class="well">
				<h3><span class="fa fa-user"></span> <%= user.username %></h3>

					<p>
						<strong>ID</strong>: <%= user.id %><br>
						<strong>Coin</strong>: <%= user.coin %><br>
						<strong>Ethereum (GWei)</strong>: <%= user.eth_value %><br>
						<strong>Bicoin Cash(Satoshi)</strong>: <%= user.bch_value %>
					</p>

			</div>

		</div>

	</div>
	<div class="page-header text-center">
		<a href="/deposit" class="btn btn-default btn-sm">Deposit Coins</a>
	</div>
	<div class="page-header text-center">
		<a href="/withdraw" class="btn btn-default btn-sm">Withdraw Coins</a>
	</div>
	<script>
//		document.write('out='+document.get)
	</script>

</div>

</body>
</html>
